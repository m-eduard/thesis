{
  "name": "lambdachecker-easy-submit",
  "displayName": "LambdaChecker",
  "description": "Submit solutions for LambdaChecker problems directly in VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lambdachecker-easy-submit.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "lambdachecker.submit",
        "title": "Submit Solution"
      },
      {
        "command": "lambdachecker.login",
        "title": "Login"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "lambdachecker.login",
          "when": "false"
        }
      ]
    },
    "viewsContainers": {
        "activitybar": [
            {
                "id": "lambdachecker",
                "title": "Lambda Checker",
                "icon": "resources/lambda-checker-logo.svg"
            }
        ]
    },
    "views": {
      "lambdachecker": [
        {
          "id": "lambdachecker.contests",
          "name": "Contests",
          "visibility": "visible"
        },
        {
            "id": "lambdachecker.problems",
            "name": "Problems",
            "visibility": "collapsed"
        },
        {
            "id": "lambdachecker.profile",
            "name": "Profile",
            "visibility": "collapsed"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "lambdachecker.contests",
        "contents": "[Sign in to LambdaChecker](command:lambdachecker.login)",
        "when": "view == lambdachecker.contests"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "tsc",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --ignore-path .gitignore --write '**/*.+(js|ts|json)'",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
